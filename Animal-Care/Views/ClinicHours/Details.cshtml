@model Animal_Care.Models.ClinicHour

@{
    ViewData["Title"] = "Clinic Hours Details";
}

<h1>Clinic Hours Details</h1>

<div>
    <h4>Clinic Hours</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Day
        </dt>
        <dd class="col-sm-10">
            @Model.DayOfWeek
        </dd>

        <dt class="col-sm-2">
            Open Time
        </dt>
        <dd class="col-sm-10">
            @Model.OpenTime.ToString(@"hh\:mm")
        </dd>

        <dt class="col-sm-2">
            Close Time
        </dt>
        <dd class="col-sm-10">
            @Model.CloseTime.ToString(@"hh\:mm")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
