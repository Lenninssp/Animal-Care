@model Animal_Care.Models.MedicalRecord

@{
    ViewData["Title"] = "Edit Medical Record";
}

<h1>Edit Medical Record</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="card mb-3">
                <div class="card-header">
                    Appointment & Patient
                </div>
                <div class="card-body">
                    <p>
                        <strong>Pet:</strong>
                        @Model.Pet?.Name (@Model.Pet?.Species)
                    </p>
                    <p>
                        <strong>Veterinarian:</strong>
                        @Model.Vet?.User?.FullName
                    </p>
                    <p>
                        <strong>Appointment:</strong>
                        @Model.Appointment?.StartTime.ToString("g")
                    </p>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    Clinical Details
                </div>
                <div class="card-body">
                    <div class="form-group mb-2">
                        <label asp-for="VisitDate" class="form-label"></label>
                        <input asp-for="VisitDate" class="form-control" type="date" />
                        <span asp-validation-for="VisitDate" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Diagnosis" class="form-label"></label>
                        <textarea asp-for="Diagnosis" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Diagnosis" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Treatment" class="form-label"></label>
                        <textarea asp-for="Treatment" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Treatment" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
