@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Animal_Care</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Animal_Care.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    @* <img src="~/images/logo.png" alt="Animal Care" width="32" height="32" class="me-2" /> *@
                    <span>Animal Care</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- LEFT SIDE NAV -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            @* Admin & Receptionist: manage clients, pets, appointments *@
                            if (User.IsInRole("Admin") || User.IsInRole("Receptionist"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Owners" asp-action="Index">Owners</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Pets" asp-action="Index">Pets</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Appointments" asp-action="Index">Appointments</a>
                                </li>
                            }

                            @* Veterinarians & Admin: medical records *@
                            if (User.IsInRole("Veterinarian") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="MedicalRecords" asp-action="Index">Medical Records</a>
                                </li>
                            }

                            @* Admin-only config/management links *@
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        Admin
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Users" asp-action="Index">Users</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Roles" asp-action="Index">Roles</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Veterinarians" asp-action="Index">Veterinarians</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="AppointmentTypes" asp-action="Index">Appointment Types</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="ClinicHours" asp-action="Index">Clinic Hours</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="VetSchedules" asp-action="Index">Vet Schedules</a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                    </ul>

                    <!-- RIGHT SIDE AUTH / ACCOUNT -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="navbar-text text-dark">
                                    Hello, @User.Identity.Name
                                    @* (@User.FindFirst(ClaimTypes.Role)?.Value) *@
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Register">Sign Up</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Animal_Care -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
