@model Animal_Care.Models.VetSchedule

@{
    ViewData["Title"] = "Vet Schedule Details";
}

<h1 class="mb-4">Vet Schedule Details</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Veterinarian</dt>
            <dd class="col-sm-9">
                @(Model.Vet?.User?.FullName ?? "(no name)")
            </dd>

            <dt class="col-sm-3">Day of Week</dt>
            <dd class="col-sm-9">
                @Model.DayOfWeek
            </dd>

            <dt class="col-sm-3">Start Time</dt>
            <dd class="col-sm-9">
                @Model.StartTime.ToString(@"hh\:mm")
            </dd>

            <dt class="col-sm-3">End Time</dt>
            <dd class="col-sm-9">
                @Model.EndTime.ToString(@"hh\:mm")
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
