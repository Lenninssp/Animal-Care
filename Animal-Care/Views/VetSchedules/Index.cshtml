@model IEnumerable<Animal_Care.Models.VetSchedule>

@{
    ViewData["Title"] = "Vet Schedules";
}

<h1 class="mb-4">Vet Schedules</h1>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>All Vet Schedules</span>
        <a asp-action="Create" class="btn btn-sm btn-primary">Create New Schedule</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Veterinarian</th>
                        <th>Day</th>
                        <th>Start</th>
                        <th>End</th>
                        <th style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Vet?.User?.FullName</td>
                            <td>@item.DayOfWeek</td>
                            <td>@item.StartTime</td>
                            <td>@item.EndTime</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
