@model Animal_Care.Models.Veterinarian

@{
    ViewData["Title"] = "Veterinarian Details";
}

<h1>Veterinarian Details</h1>

<div>
    <h4>@Model.User?.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.User?.FullName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.User?.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.User?.Phone</dd>

        <dt class="col-sm-2">Specialty</dt>
        <dd class="col-sm-10">@Model.Specialty</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
