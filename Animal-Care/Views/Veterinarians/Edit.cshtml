@model Animal_Care.Models.Veterinarian

@{
    ViewData["Title"] = "Edit Veterinarian";
}

<h1>Edit Veterinarian</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* primary key *@
            <input type="hidden" asp-for="UserId" />

            <div class="form-group mb-2">
                <label asp-for="UserId" class="control-label">User (Veterinarian)</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" disabled></select>
                <span class="form-text text-muted">Linked user cannot be changed here.</span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Specialty" class="control-label"></label>
                <input asp-for="Specialty" class="form-control" />
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
